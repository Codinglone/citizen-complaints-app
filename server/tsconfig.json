{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es2016",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ]
   },
   "include": ["src/**/*.ts", "src/**/*.d.ts"]
}